<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Recover Password</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/css/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/css/adminlte.min.css">
</head>

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Admin</b>LTE</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">You are only one step a way from your new password, recover your password now.
                </p>

                <form action="/recoverpassword/<%= userid  %>" method="post">
                    <div class="input-group mt-2">
                        <input type="password" class="form-control" placeholder="Password" name="password"
                            id="password-input">
                        <div class="input-group-append">
                            <div class="input-group-text" id="toggle-password">
                                <span class="fas fa-eye" id="toggle-icon"></span>
                            </div>
                        </div>
                    </div>
                    <div>
                        <% if(errorMsg){ %>
                            <% errorMsg.forEach((err)=> { %> 
                                <% if(err.path==="password" ){ %>
                                    <span class="error-message">
                                        <%= err.msg %>
                                    </span>
                                    <% } %>
                                        <% }) %>
                                            <% } %>
                    </div>
                    <div class="input-group mt-2">
                        <input type="password" class="form-control" placeholder="Confirm Password"
                            name="confirmPassword" id="confirmPassword-Input">
                        <div class="input-group-append">
                            <div class="input-group-text" id="toggle-confirmPassword">
                                <span class="fas fa-eye" id="toggle-confirmPasswordIcon"></span>
                            </div>
                        </div>
                    </div>
                    <div>
                        <% if(errorMsg) {%>
                            <% errorMsg.forEach((err)=> { %>
                                <% if(err.path==="confirmPassword" ) { %>
                                    <span class="error-message">
                                        <%= err.msg %>
                                    </span>
                                    <% } %>
                                        <% }) %>
                                            <% } %>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <!-- <p class="mt-3 mb-1">
                    <a href="/login">Login</a>
                </p> -->
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->

    <!-- jQuery -->
    <script src="/js/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/js/adminlte.min.js"></script>
    <!-- script password toggle-->
    <script src="/js/password.js"></script>
</body>

</html>

<style>
    .error-message {
        color: red;
        font-size: 12px;
        display: block;
    }
</style>